count=`ls cfs 2>/dev/null | wc -l`
if [ $count = "0" ] ; then
	echo "No images to test"
	exit 0
fi
if [ $count = "1" ] ; then
	cmd=`ls cfs | awk -F \. '{ printf "%s %s\n", $1, $2 }'`
	./run_test $cmd
else
	echo "Too many images to pick from, run ./run_test by hand"
fi 
